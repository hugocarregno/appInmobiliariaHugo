<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFechaInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33FCFF"
        android:text="Fecha de Inicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFechaInicioValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AAAA-MM-DD"
        android:background="#C7C4C4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaInicio" />

    <TextView
        android:id="@+id/tvFechaCierre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33FCFF"
        android:text="Fecha de Cierre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaInicioValor" />

    <TextView
        android:id="@+id/tvFechaCierreValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AAAA-MM-DD"
        android:background="#C7C4C4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaCierre" />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33FCFF"
        android:text="Precio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaCierreValor" />

    <TextView
        android:id="@+id/tvPrecioValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.0"
        android:background="#C7C4C4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrecio" />

    <TextView
        android:id="@+id/tvSeparador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0E0D0D"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrecioValor" />

</androidx.constraintlayout.widget.ConstraintLayout>